# ============================================
# Environment Variables - Chris Nattress Portfolio
# ============================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control
# ============================================

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (only use server-side, keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# ANTHROPIC (CLAUDE AI) CONFIGURATION
# ============================================
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Model to use (default: claude-sonnet-4-20250514)
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Node environment
NODE_ENV=development

# Base URL for the application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# RATE LIMITING (optional)
# ============================================
# Max requests per IP per hour
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# ANALYTICS (optional)
# ============================================
# Enable/disable analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Admin dashboard access key (for viewing analytics)
ADMIN_ACCESS_KEY=your-secret-admin-key-here

# ============================================
# GITHUB INTEGRATION (optional)
# ============================================
# Your GitHub username for fetching public repos and stats
NEXT_PUBLIC_GITHUB_USERNAME=cr-nattress

# GitHub Personal Access Token (optional - only needed for higher rate limits)
# Get one from: https://github.com/settings/tokens
# Leave blank to use unauthenticated API (60 req/hour)
GITHUB_TOKEN=ghp_your-github-token-here
